# ==========================================
# HADEROS Platform - Environment Variables
# NOW SHOES Order Management System
# ==========================================

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql://user:password@localhost:5432/haderos_db

# ==========================================
# API Configuration
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_DEBUG=true

# ==========================================
# CORS Configuration
# ==========================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ==========================================
# Security Configuration
# ==========================================
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# Shopify Integration
# ==========================================
SHOPIFY_SHOP_URL=your-shop.myshopify.com
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token
SHOPIFY_WEBHOOK_SECRET=your-webhook-secret

# ==========================================
# Aramex Shipping Integration
# ==========================================
ARAMEX_USERNAME=your-aramex-username
ARAMEX_PASSWORD=your-aramex-password
ARAMEX_ACCOUNT_NUMBER=your-aramex-account
ARAMEX_ACCOUNT_PIN=your-aramex-pin
ARAMEX_ACCOUNT_ENTITY=your-aramex-entity
ARAMEX_ACCOUNT_COUNTRY_CODE=SA

# ==========================================
# SMSA Shipping Integration
# ==========================================
SMSA_USERNAME=your-smsa-username
SMSA_PASSWORD=your-smsa-password
SMSA_ACCOUNT_NUMBER=your-smsa-account
SMSA_PASSKEY=your-smsa-passkey

# ==========================================
# SMS Notifications (Unifonic)
# ==========================================
UNIFONIC_APP_SID=your-unifonic-app-sid
UNIFONIC_AUTH_TOKEN=your-unifonic-auth-token
UNIFONIC_SENDER_ID=your-sender-id

# Alternative SMS Provider (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# ==========================================
# Email Notifications (SendGrid)
# ==========================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@haderos.com
SENDGRID_FROM_NAME=HaderOS Platform

# Alternative Email Provider (SMTP)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# ==========================================
# Redis Configuration (Optional)
# ==========================================
REDIS_URL=redis://localhost:6379

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ==========================================
# File Upload Configuration
# ==========================================
MAX_UPLOAD_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads/

# ==========================================
# External APIs
# ==========================================
GOOGLE_MAPS_API_KEY=your-google-maps-key
OPENAI_API_KEY=your-openai-key

# ==========================================
# Development Settings
# ==========================================
DEBUG=true
TESTING=false