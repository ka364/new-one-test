# ============================================
# HADEROS - Environment Configuration Template
# ============================================
# Copy this file to .env and update values
# NEVER commit .env to version control!
# ============================================

# ============================================
# Application Identity
# ============================================
APP_NAME=HaderOS
APP_ENV=production
APP_VERSION=1.0.0
APP_DEBUG=false
NODE_ENV=production

# ============================================
# Network & Ports
# ============================================
HOST=0.0.0.0
PORT=3000
API_HOST=0.0.0.0
API_PORT=8000
GRPC_PORT=50051
DASHBOARD_PORT=3000

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_ENGINE=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_NAME=haderos_platform
DB_USER=haderos
DB_PASSWORD=change-me-in-production
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ============================================
# Security & Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRE_DAYS=30
SESSION_SECRET=your-session-secret-key
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Password Hashing
BCRYPT_ROUNDS=12

# ============================================
# KAIA Theology Engine
# ============================================
KAIA_SERVICE_URL=http://kaia-service:8080
KAIA_API_KEY=your-kaia-api-key
SCHOLAR_PORTAL_URL=https://scholars.haderos.com
THEOLOGY_FIREWALL_ENABLED=true
KAIA_ENABLED=true

# ============================================
# Bio-Modules Configuration
# ============================================
BIO_MODULES_ENABLED=true
ARACHNID_MODULE_ENABLED=true
CHAMELEON_MODULE_ENABLED=true
ANT_COLONY_MODULE_ENABLED=true
MYCELIUM_MODULE_ENABLED=true
TARDIGRADE_MODULE_ENABLED=true
CORVID_MODULE_ENABLED=true

# ============================================
# Payment Providers
# ============================================
# PayMob (Egypt)
PAYMOB_API_KEY=
PAYMOB_INTEGRATION_ID=
PAYMOB_IFRAME_ID=
PAYMOB_HMAC_SECRET=

# Moyasar (Saudi Arabia)
MOYASAR_API_KEY=
MOYASAR_PUBLISHABLE_KEY=

# Stripe (International)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Tap Payments (GCC)
TAP_SECRET_KEY=
TAP_PUBLISHABLE_KEY=

# ============================================
# SMS Providers
# ============================================
# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Unifonic (MENA Region)
UNIFONIC_APP_SID=
UNIFONIC_SENDER_ID=

# ============================================
# Email Configuration
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@haderos.com

# SendGrid (Optional)
SENDGRID_API_KEY=

# ============================================
# Maps & Delivery
# ============================================
GOOGLE_MAPS_API_KEY=
MAPBOX_ACCESS_TOKEN=

# ============================================
# Push Notifications (Firebase)
# ============================================
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ============================================
# AI Services
# ============================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ============================================
# Marketing & Analytics Integrations
# ============================================
FACEBOOK_CAPI_URL=https://graph.facebook.com/v18.0
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_PIXEL_ID=
GA4_MEASUREMENT_ID=G-XXXXXXXXXX
GA4_API_SECRET=
TIKTOK_BUSINESS_ID=
TIKTOK_ACCESS_TOKEN=
SNAPCHAT_PIXEL_ID=

# ============================================
# Blockchain & Smart Contracts (Optional)
# ============================================
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR-PROJECT-ID
CONTRACT_OWNER_ADDRESS=
CONTRACT_OWNER_PRIVATE_KEY=

# ERC-3643 Configuration
ERC3643_REGISTRY_ADDRESS=
ERC3643_COMPLIANCE_ADDRESS=
ONCHAINID_VERIFIER=

# ============================================
# Monitoring & Observability
# ============================================
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-grafana-password
JAEGER_ENDPOINT=http://jaeger:6831

# Sentry (Error Tracking)
SENTRY_DSN=

# ============================================
# Message Queue
# ============================================
RABBITMQ_USER=haderos
RABBITMQ_PASSWORD=your-rabbitmq-password
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASSWORD}@rabbitmq:5672/haderos

# Kafka (Optional)
KAFKA_BOOTSTRAP_SERVERS=kafka-1:9092,kafka-2:9092,kafka-3:9092
KAFKA_CLIENT_ID=haderos-producer
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=SCRAM-SHA-512
KAFKA_SASL_USERNAME=haderos_user
KAFKA_SASL_PASSWORD=

# ============================================
# Feature Flags
# ============================================
ENABLE_BIO_MODULES=true
ENABLE_KAIA_ENGINE=true
ENABLE_GROUP_BUYING=true
ENABLE_SMART_LOCKERS=false
ENABLE_COMMUNITY_GROUPS=true
ENABLE_BLOCKCHAIN=false

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# File Upload
# ============================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=https://haderos.com,https://www.haderos.com,https://admin.haderos.com

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# ============================================
# Deployment
# ============================================
DEPLOYMENT_ENV=production
CLUSTER_NAME=haderos-prod-1
REGION=me-central-1
