# HaderOS Platform - Environment Variables Template

# Application
APP_NAME=HaderOS Platform
APP_VERSION=1.0.0
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://haderos:haderos@localhost:5432/haderos_platform

# Redis
REDIS_URL=redis://localhost:6379/0

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Blockchain
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR-PROJECT-ID
CONTRACT_OWNER_ADDRESS=0xYourOwnerAddress
CONTRACT_OWNER_PRIVATE_KEY=your-private-key

# ERC-3643
ERC3643_REGISTRY_ADDRESS=0x1234...abcd
ERC3643_COMPLIANCE_ADDRESS=0x5678...efgh

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# KAIA Theology Engine
KAIA_SERVICE_URL=http://localhost:8080
KAIA_API_KEY=your-kaia-api-key
THEOLOGY_FIREWALL_ENABLED=True

# Monitoring
PROMETHEUS_ENABLED=True
SENTRY_DSN=your-sentry-dsn
