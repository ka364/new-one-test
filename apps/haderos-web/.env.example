# ============================================
# HADEROS AI CLOUD - Environment Variables
# ============================================

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://username:password@localhost:5432/haderos_dev"

# ============================================
# SERVER
# ============================================
NODE_ENV="development"
PORT=3000
HOST="localhost"
FRONTEND_URL="http://localhost:5173"

# ============================================
# SECURITY
# ============================================

# Encryption key for sensitive data (32+ characters recommended)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="change-this-to-a-secure-random-key-in-production"

# JWT Secret (32+ characters recommended)
# Generate with: openssl rand -hex 32
JWT_SECRET="change-this-to-a-secure-random-jwt-secret"

# Session Secret (32+ characters recommended)
SESSION_SECRET="change-this-to-a-secure-random-session-secret"

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# ============================================
# AI SERVICES
# ============================================

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key-here"

# DeepSeek (87% cheaper!)
DEEPSEEK_API_KEY="sk-your-deepseek-api-key-here"

# Anthropic (Claude)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key-here"

# ============================================
# EMAIL
# ============================================

# SendGrid
SENDGRID_API_KEY="SG.your-sendgrid-api-key-here"
FROM_EMAIL="noreply@haderos.ai"
FROM_NAME="HADEROS Team"

# SMTP (alternative to SendGrid)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# ============================================
# PAYMENT GATEWAYS
# ============================================

# Stripe
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# PayPal
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox" # or "production"

# Fawry (Egypt)
# FAWRY_MERCHANT_CODE="your-merchant-code"
# FAWRY_SECURITY_KEY="your-security-key"

# Paymob (Egypt)
# PAYMOB_API_KEY="your-paymob-api-key"
# PAYMOB_INTEGRATION_ID="your-integration-id"

# ============================================
# SHIPPING PROVIDERS
# ============================================

# Bosta (Egypt, Saudi)
BOSTA_API_KEY="your-bosta-api-key"
BOSTA_BUSINESS_ID="your-business-id"
BOSTA_BASE_URL="https://app.bosta.co/api/v2"

# JNT (Egypt)
JNT_API_KEY="your-jnt-api-key"
JNT_CUSTOMER_ID="your-customer-id"

# Aramex
# ARAMEX_USERNAME="your-username"
# ARAMEX_PASSWORD="your-password"
# ARAMEX_ACCOUNT_NUMBER="your-account-number"

# ============================================
# SHOPIFY INTEGRATION
# ============================================

SHOPIFY_STORE_URL="your-store.myshopify.com"
SHOPIFY_ADMIN_API_TOKEN="shpat_your-admin-api-token"
SHOPIFY_WEBHOOK_SECRET="your-webhook-secret"
SHOPIFY_API_VERSION="2025-01"

# ============================================
# CLOUD STORAGE
# ============================================

# AWS S3
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="haderos-uploads"

# Google Cloud Storage
# GOOGLE_APPLICATION_CREDENTIALS="path/to/credentials.json"
# GCS_BUCKET="haderos-uploads"

# ============================================
# GOOGLE SERVICES
# ============================================

# Google Sheets API
GOOGLE_SERVICE_ACCOUNT_EMAIL="your-service-account@project.iam.gserviceaccount.com"
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----"
GOOGLE_SHEETS_FOLDER_ID="your-google-drive-folder-id"

# Google Maps (for location features)
# GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ============================================
# MONITORING & LOGGING
# ============================================

# Sentry (Error Tracking)
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# New Relic (APM)
# NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"
# NEW_RELIC_APP_NAME="HADEROS AI CLOUD"

# Datadog (APM + Logs)
# DATADOG_API_KEY="your-datadog-api-key"
# DATADOG_APP_KEY="your-datadog-app-key"

# Log Level
LOG_LEVEL="info" # debug, info, warn, error, critical

# ============================================
# REDIS (for caching & sessions)
# ============================================

# REDIS_URL="redis://localhost:6379"
# REDIS_PASSWORD="your-redis-password"
# REDIS_DB=0

# ============================================
# RATE LIMITING
# ============================================

# General API rate limit
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX=100

# Auth rate limit
AUTH_RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
AUTH_RATE_LIMIT_MAX=5

# ============================================
# FEATURES FLAGS
# ============================================

# Enable/Disable features
ENABLE_KAIA=true
ENABLE_SENTINEL=false
ENABLE_BLOCKCHAIN=false
ENABLE_AI_CHAT=true
ENABLE_VISUAL_SEARCH=false
ENABLE_CONTENT_CREATOR=false

# Bio-Modules
ENABLE_BIO_MODULES=true
ENABLE_MYCELIUM=true
ENABLE_ANT=true
ENABLE_CORVID=true
ENABLE_CHAMELEON=true
ENABLE_TARDIGRADE=true
ENABLE_CEPHALOPOD=true
ENABLE_ARACHNID=true

# ============================================
# BLOCKCHAIN (if enabled)
# ============================================

# Ethereum
# ETH_NETWORK="mainnet" # or "goerli", "sepolia"
# ETH_PRIVATE_KEY="your-private-key"
# ETH_RPC_URL="https://mainnet.infura.io/v3/your-infura-key"

# ============================================
# SMS PROVIDERS
# ============================================

# Twilio
# TWILIO_ACCOUNT_SID="your-account-sid"
# TWILIO_AUTH_TOKEN="your-auth-token"
# TWILIO_PHONE_NUMBER="+1234567890"

# Nexmo/Vonage
# NEXMO_API_KEY="your-api-key"
# NEXMO_API_SECRET="your-api-secret"
# NEXMO_PHONE_NUMBER="+1234567890"

# ============================================
# PUSH NOTIFICATIONS
# ============================================

# Firebase Cloud Messaging
# FCM_SERVER_KEY="your-fcm-server-key"
# FCM_PROJECT_ID="your-firebase-project-id"

# ============================================
# ANALYTICS
# ============================================

# Google Analytics
# GA_TRACKING_ID="UA-XXXXXXXXX-X" # or "G-XXXXXXXXXX"

# Mixpanel
# MIXPANEL_TOKEN="your-mixpanel-token"

# ============================================
# SOCIAL AUTH (Optional)
# ============================================

# Google OAuth
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Facebook OAuth
# FACEBOOK_APP_ID="your-facebook-app-id"
# FACEBOOK_APP_SECRET="your-facebook-app-secret"

# ============================================
# DEVELOPMENT TOOLS
# ============================================

# Debug mode
DEBUG=false

# Mock external APIs (for testing)
MOCK_EXTERNAL_APIS=false

# Seed database
SEED_DATABASE=false

# ============================================
# PRODUCTION ONLY
# ============================================

# SSL/TLS
# FORCE_HTTPS=true
# SSL_CERT_PATH="/path/to/cert.pem"
# SSL_KEY_PATH="/path/to/key.pem"

# CDN
# CDN_URL="https://cdn.haderos.ai"

# Database connection pool
# DB_POOL_MIN=2
# DB_POOL_MAX=10

# ============================================
# NOTES
# ============================================

# 1. Never commit this file with real values
# 2. Use strong, random values for all secrets
# 3. Rotate keys regularly (every 90 days recommended)
# 4. Use different values for dev, staging, production
# 5. Store production secrets in secure vault (e.g., AWS Secrets Manager)
# 6. Enable 2FA for all critical services
# 7. Monitor API usage and set alerts
