    {
      "name": "Webhooks",
      "item": [
        {
          "name": "Shopify Order Created",
          "request": {
            "method": "POST",
            "header": [
              {"key": "Content-Type", "value": "application/json"},
              {"key": "X-Shopify-Topic", "value": "orders/create"},
              {"key": "X-Shopify-Hmac-Sha256", "value": "{{webhookSignature}}"}
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"id\": 123456789,\n  \"name\": \"#1001\",\n  \"email\": \"customer@example.com\",\n  \"total_price\": \"599.99\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/webhooks/shopify",
              "host": ["{{baseUrl}}"],
              "path": ["api", "webhooks", "shopify"]
            }
          }
        }
      ]
    }
  ]
}
