# ============================================
# HADEROS AI CLOUD - Production Environment
# ملف البيئة للإنتاج - جاهز للتعبئة
# ============================================

# ============================================
# 1. DATABASE (مطلوب فوراً)
# ============================================
# DigitalOcean Managed Database connection string
DATABASE_URL="postgresql://doadmin:YOUR_PASSWORD@app-xxxxx-do-user-xxxxx-0.db.ondigitalocean.com:25060/defaultdb?sslmode=require"

# ============================================
# 2. SECURITY KEYS (مطلوب فوراً)
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET="REPLACE_WITH_32_CHAR_RANDOM_STRING"
SESSION_SECRET="REPLACE_WITH_32_CHAR_RANDOM_STRING"
ENCRYPTION_KEY="REPLACE_WITH_32_CHAR_RANDOM_STRING"

# ============================================
# 3. APPLICATION
# ============================================
NODE_ENV="production"
PORT=3000
HOST="0.0.0.0"
FRONTEND_URL="https://haderos.ai"
CORS_ORIGINS="https://haderos.ai,https://www.haderos.ai"

# ============================================
# 4. SHOPIFY (للتجارة)
# ============================================
SHOPIFY_STORE_URL="nowshoes-eg.myshopify.com"
SHOPIFY_ADMIN_API_TOKEN="shpat_REPLACE_WITH_YOUR_TOKEN"
SHOPIFY_WEBHOOK_SECRET="whsec_REPLACE_WITH_YOUR_SECRET"
SHOPIFY_API_VERSION="2025-01"

# ============================================
# 5. SHIPPING - BOSTA (Egypt)
# ============================================
BOSTA_API_KEY="REPLACE_WITH_BOSTA_API_KEY"
BOSTA_BUSINESS_ID="REPLACE_WITH_BUSINESS_ID"
BOSTA_BASE_URL="https://app.bosta.co/api/v2"

# ============================================
# 6. SHIPPING - J&T Express (Egypt)
# ============================================
JNT_API_KEY="REPLACE_WITH_JNT_API_KEY"
JNT_CUSTOMER_ID="REPLACE_WITH_CUSTOMER_ID"
JNT_BASE_URL="https://api.jtexpress.eg"

# ============================================
# 7. PAYMENTS - InstaPay (اختياري)
# ============================================
INSTAPAY_MERCHANT_ID="REPLACE_IF_USING"
INSTAPAY_API_KEY="REPLACE_IF_USING"
INSTAPAY_SECRET_KEY="REPLACE_IF_USING"
INSTAPAY_ENVIRONMENT="production"

# ============================================
# 8. PAYMENTS - Mobile Wallets (اختياري)
# ============================================
# Vodafone Cash, Orange Money, Etisalat Cash, WE Pay
MOBILE_WALLET_MERCHANT_ID="REPLACE_IF_USING"
MOBILE_WALLET_API_KEY="REPLACE_IF_USING"

# ============================================
# 9. AI SERVICES (اختياري للبداية)
# ============================================
OPENAI_API_KEY="sk-REPLACE_IF_USING"
DEEPSEEK_API_KEY="sk-REPLACE_IF_USING"

# ============================================
# 10. WHATSAPP BUSINESS (للتواصل)
# ============================================
WHATSAPP_ACCESS_TOKEN="REPLACE_WITH_ACCESS_TOKEN"
WHATSAPP_PHONE_NUMBER_ID="REPLACE_WITH_PHONE_ID"
WHATSAPP_BUSINESS_ID="REPLACE_WITH_BUSINESS_ID"
WHATSAPP_VERIFY_TOKEN="REPLACE_WITH_VERIFY_TOKEN"

# ============================================
# 11. EMAIL (اختياري)
# ============================================
SENDGRID_API_KEY="SG.REPLACE_IF_USING"
FROM_EMAIL="noreply@haderos.ai"
FROM_NAME="HADEROS Team"

# ============================================
# 12. FEATURE FLAGS
# ============================================
ENABLE_KAIA=true
ENABLE_BIO_MODULES=true
ENABLE_VISUAL_SEARCH=false
ENABLE_AI_CHAT=true

# ============================================
# 13. LOGGING & MONITORING
# ============================================
LOG_LEVEL="info"
SENTRY_DSN="REPLACE_IF_USING"

# ============================================
# القيم المطلوبة فوراً للإطلاق:
# ============================================
# 1. DATABASE_URL ✅ (من DigitalOcean)
# 2. JWT_SECRET ✅ (توليد عشوائي)
# 3. SESSION_SECRET ✅ (توليد عشوائي)
# 4. SHOPIFY_STORE_URL ✅ (موجود)
# 5. SHOPIFY_ADMIN_API_TOKEN ✅ (من Shopify Admin)
