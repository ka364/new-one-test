          }
        },
        {
          "name": "Get Installment Schedule",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/trpc/bnpl.getSchedule?input={\"contractId\":1}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trpc", "bnpl.getSchedule"],
              "query": [{"key": "input", "value": "{\"contractId\":1}"}]
            }
          }
        }
      ]
    },
    {
      "name": "WhatsApp Commerce",
      "item": [
        {
          "name": "Send Catalog",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"201012345678\",\n  \"catalogId\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/trpc/whatsappCommerce.sendCatalog",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trpc", "whatsappCommerce.sendCatalog"]
            }
          }
        },
        {
          "name": "Create WhatsApp Order",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerPhone\": \"201012345678\",\n  \"items\": [{\"productId\": 1, \"quantity\": 1}],\n  \"address\": \"القاهرة\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/trpc/whatsappCommerce.createOrder",
              "host": ["{{baseUrl}}"],
              "path": ["api", "trpc", "whatsappCommerce.createOrder"]
            }
