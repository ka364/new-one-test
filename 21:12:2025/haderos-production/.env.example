# ============================================
# HADEROS PRODUCTION - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# DATABASE (اختر واحد فقط)
# ============================================

# Option 1: SQLite (للتطوير المحلي - الأسهل)
# DATABASE_URL="file:./dev.db"

# Option 2: PostgreSQL المحلي
# DATABASE_URL="postgresql://postgres:password@localhost:5432/haderos_dev"

# Option 3: Supabase (مجاني - موصى به للإنتاج)
# DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT].supabase.co:5432/postgres"

# Option 4: Neon (مجاني - بديل ممتاز)
# DATABASE_URL="postgresql://[user]:[password]@[host].neon.tech/neondb?sslmode=require"

# Option 5: DigitalOcean Managed Database
# DATABASE_URL="postgresql://doadmin:[password]@[host]:25060/defaultdb?sslmode=require"

# الخيار النشط (غير هذا حسب احتياجك):
DATABASE_URL="file:./dev.db"

# ============================================
# SERVER
# ============================================
NODE_ENV="development"
PORT=3000
HOST="localhost"
FRONTEND_URL="http://localhost:5173"

# ============================================
# SECURITY
# ============================================

# Encryption key (32+ characters) - Generate: openssl rand -hex 32
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# JWT Secret (32+ characters) - Generate: openssl rand -hex 32
JWT_SECRET="your-32-character-jwt-secret-here"

# Session Secret (32+ characters)
SESSION_SECRET="your-32-character-session-secret-here"

# CORS Allowed Origins
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"

# ============================================
# AI SERVICES (اختياري للتطوير)
# ============================================

# DeepSeek (87% أرخص من OpenAI!)
DEEPSEEK_API_KEY="sk-your-deepseek-api-key"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"

# Anthropic Claude
ANTHROPIC_API_KEY="sk-ant-your-anthropic-key"

# ============================================
# EMAIL (اختياري للتطوير)
# ============================================

# SendGrid
SENDGRID_API_KEY="SG.your-sendgrid-api-key"
FROM_EMAIL="noreply@haderos.ai"
FROM_NAME="HADEROS Team"

# ============================================
# SHIPPING PROVIDERS
# ============================================

# Bosta (Egypt, Saudi)
BOSTA_API_KEY="your-bosta-api-key"
BOSTA_BUSINESS_ID="your-business-id"
BOSTA_BASE_URL="https://app.bosta.co/api/v2"

# JNT (Egypt)
JNT_API_KEY="your-jnt-api-key"
JNT_CUSTOMER_ID="your-customer-id"

# ============================================
# SHOPIFY (اختياري)
# ============================================

SHOPIFY_STORE_URL="your-store.myshopify.com"
SHOPIFY_ADMIN_API_TOKEN="shpat_your-token"
SHOPIFY_WEBHOOK_SECRET="your-webhook-secret"
SHOPIFY_API_VERSION="2025-01"

# ============================================
# CLOUD STORAGE (اختياري)
# ============================================

# AWS S3
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="haderos-uploads"

# ============================================
# FEATURE FLAGS
# ============================================

# Core Features
ENABLE_KAIA=true
ENABLE_AI_CHAT=true
ENABLE_BIO_MODULES=true

# Optional Features
ENABLE_VISUAL_SEARCH=false
ENABLE_CONTENT_CREATOR=false
ENABLE_BLOCKCHAIN=false

# Bio-Modules
ENABLE_MYCELIUM=true
ENABLE_ANT=true
ENABLE_CORVID=true
ENABLE_CHAMELEON=true
ENABLE_TARDIGRADE=true
ENABLE_CEPHALOPOD=true
ENABLE_ARACHNID=true

# ============================================
# DEVELOPMENT
# ============================================

DEBUG=true
MOCK_EXTERNAL_APIS=true
SEED_DATABASE=false
LOG_LEVEL="debug"

# ============================================
# RATE LIMITING
# ============================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=5

# ============================================
# QUICK START GUIDE
# ============================================
#
# 1. للتطوير المحلي السريع:
#    DATABASE_URL="file:./dev.db"
#    ثم: pnpm db:push
#
# 2. للإنتاج (Supabase مجاني):
#    - اذهب إلى: https://supabase.com
#    - أنشئ مشروع جديد
#    - انسخ Connection String
#    - ضعه في DATABASE_URL
#
# 3. لتشغيل المشروع:
#    pnpm install
#    pnpm db:push
#    pnpm dev
#
# ============================================
