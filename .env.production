# HaderOS Platform - Production Environment Variables
# Copy this file to .env and update with your actual values

# Database
DB_USER=haderos
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_NAME=haderos_platform
DATABASE_URL=postgresql://haderos:CHANGE_THIS@localhost:5432/haderos_platform

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS - Update with your actual domain
CORS_ORIGINS=https://haderos.com,https://www.haderos.com

# Application
DEBUG=False
APP_NAME=HaderOS Platform
APP_VERSION=1.0.0

# Blockchain (if needed)
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/YOUR_INFURA_KEY

# KAIA
KAIA_SERVICE_URL=http://localhost:8080
KAIA_API_KEY=YOUR_KAIA_API_KEY
THEOLOGY_FIREWALL_ENABLED=true

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
PROMETHEUS_ENABLED=true

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
